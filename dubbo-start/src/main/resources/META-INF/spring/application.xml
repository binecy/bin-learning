<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="base-service"  />
    <!-- 用dubbo协议在29115端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="29115" />

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://aws.binecy.com:2181" />

    <!-- 定义接口实现类 -->
    <bean id="helloService" class="com.dubbo.start.service.HelloServiceImpl"></bean>
    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.dubbo.start.service.HelloService" ref="helloService" timeout="6000"  protocol="dubbo" validation="true"/>


    <bean id="callbackService" class="com.dubbo.start.service.CallbackServiceImpl" />
    <dubbo:service interface="com.dubbo.start.service.CallbackService" ref="callbackService" connections="1" callbacks="1000">
        <dubbo:method name="addListener">
            <dubbo:argument index="1" callback="true" />
            <!--也可以通过指定类型的方式-->
            <!--<dubbo:argument type="com.demo.CallbackListener" callback="true" />-->
        </dubbo:method>
    </dubbo:service>
</beans>